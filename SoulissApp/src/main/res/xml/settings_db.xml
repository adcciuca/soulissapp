        <Preference
            android:name="dbimp"
            android:key="dbimp"
            android:summary="@string/opt_dbimp_desc"
            android:title="@string/opt_dbimp"/>
        <Preference
            android:name="dbopt"
            android:key="dbopt"
            android:summary="@string/opt_dbopt_desc"
            android:title="@string/opt_dbopt"/>
        <Preference
            android:name="settingshare"
            android:key="settingshare"
            android:summary="@string/opt_settingshare_desc"
