<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/TagCard"
    style="?attr/cardStyle"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:layout_margin="4dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2sp"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:focusable="false">

        <ImageView
            android:id="@+id/imageViewTag"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:alpha="0.8"
            android:scaleType="centerCrop"
            android:transitionName="photo_hero"/>

        <View
            android:id="@+id/StaticTileLine"
            android:layout_width="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_height="1dip"
            android:background="@color/md_purple_400"/>
        <TextView
            android:id="@+id/imageTagIconFa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="4dp"
            android:transitionName="tag_icon"/>

        <TextView
            android:id="@+id/TextViewTagDescPlaceHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imageViewTag"
            style="@style/CodeFontMain"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="4dp"
            android:elevation="2dp"
            android:maxLines="2"
            android:text="@string/health"
            android:textSize="@dimen/text_size"
            android:visibility="invisible"
            tools:text="Descrizione TAG molto lunga e piena di fanghiglia hhhhhhhhhhh kkkkkkkkkkkk"/>

        <TextView
            android:id="@+id/TextViewTagPlaceHolder"
            style="@style/CodeFontTitle"
            android:layout_width="match_parent"
            android:layout_above="@id/TextViewTagDescPlaceHolder"
            android:layout_margin="4dp"
            android:elevation="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white_bitaplha"
            android:textIsSelectable="false"
            android:visibility="invisible"
            tools:text="Titolo TAG"/>

        <ImageView
            android:id="@+id/infoTagAlpha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/TextViewTagDescPlaceHolder"
            android:layout_alignTop="@id/TextViewTagTitle"
            android:layout_alignBottom="@id/imageViewTag"
            android:layout_gravity="bottom"
            android:alpha="0.4"
            android:background="@color/black"
            android:transitionName="shadow_hero" />

        <TextView
            android:id="@+id/TextViewTagDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imageViewTag"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="4dp"
            android:elevation="2dp"
            style="@style/CodeFontMain"
            android:maxLines="2"
            android:text="@string/health"
            android:textColor="@color/white_bitaplha"
            android:textSize="@dimen/text_size"
            tools:text="Descrizione TAG molto lunga e piena di fanghiglia hhhhhhhhhhh kkkkkkkkkkkk"/>

        <TextView
            android:id="@+id/TextViewTagTitle"
            style="@style/CodeFontTitle"
            android:layout_width="match_parent"
            android:layout_above="@id/TextViewTagDesc"
            android:layout_margin="4dp"
            android:elevation="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white_bitaplha"
            android:textIsSelectable="false"

            tools:text="Titolo TAG"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>