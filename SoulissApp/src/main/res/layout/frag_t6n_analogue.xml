<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            xmlns:tools="http://schemas.android.com/tools"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        android:id="@+id/containerlista"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp">

        <RelativeLayout
            android:id="@+id/RelativeLayoutNodeDetail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="4dp">

            <TextView
                android:id="@+id/typ_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="2dip"
                android:contentDescription="@string/souliss_app_name"/>

            <TextView
                android:id="@+id/TextViewTypNodeInfo"
                style="@style/CodeFontMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="4dp"
                android:ellipsize="end"
                android:textIsSelectable="false">
            </TextView>

            <TextView
                android:id="@+id/TextViewTypUpdate"
                style="@style/CodeFontMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/TextViewTypNodeInfo"
                android:layout_marginLeft="4dp"
                android:ellipsize="end"
                android:text="@string/update">
            </TextView>

            <TextView
                android:id="@+id/TextViewHealth"
                style="@style/CodeFontMain"
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/TextViewTypUpdate"
                android:layout_marginLeft="4dp"
                android:text="@string/health">
            </TextView>

            <ProgressBar
                android:id="@+id/progressBarTypNodo"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/TextViewTypUpdate"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_toRightOf="@id/TextViewHealth"/>


            <TextView
                android:id="@+id/textviewSetpointDiv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/progressBarTypNodo"
                android:layout_marginLeft="5dip"
                android:text="@string/setpoint"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textIsSelectable="false"/>

            <RelativeLayout
                android:id="@+id/relativeLayoutPicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textviewSetpointDiv"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp">

                <it.angelic.soulissclient.views.NumberPickerT6
                    android:id="@+id/tempSliderPicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="4dp"
                    android:layout_weight="1"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/editTextIncrementCont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tempSliderPicker">

                    <EditText
                        android:id="@+id/editTextIncrement"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="increment"
                        android:inputType="numberDecimal"/>
                </com.google.android.material.textfield.TextInputLayout>

            </RelativeLayout>

            <FrameLayout
                android:id="@+id/hvacChart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relativeLayoutPicker"
                tools:layout="@layout/frag_t5n_sensordetail"/>

            <it.angelic.tagviewlib.SimpleTagRelativeLayout
                android:id="@+id/tag_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/hvacChart"
                android:layout_margin="2dp"/>
        </RelativeLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>